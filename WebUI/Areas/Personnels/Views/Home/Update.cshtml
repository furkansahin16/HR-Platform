    * Template URL: https://bootstrapmade.com/nice-admin-bootstrap-admin-html-template/
    * Author: BootstrapMade.com
    * License: https://bootstrapmade.com/license/
    ======================================================== -->
</head>
<div class="col-md-6">
    <form asp-action="Update" asp-controller="Home" asp-area="Personnels" role="form" enctype="multipart/form-data" method="post" class="main-form">

        <h4 class="text-danger">
            @ViewBag.ErrorMessage
        </h4>

        <div class="header-content">
            <h4 class="header-text">Güncelle</h4>
            <hr />
        </div>

        <div class="update-content">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden"/>
            <div class="form-group">
            <label class="col-md-6  ">Resim Seciniz</label>
            <div class="col-md-10">
            <input asp-for="NewPhoto" class="form-control" />
            <span asp-validation-for="NewPhoto" class="text-danger"></span>
            </div>
            </div>

            <div class="form-group col-md-12">
                <label asp-for="Address" class="control-label"></label>
                <textarea asp-for="Address" class="form-control "></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <label asp-for="PhoneNumber" class="col-md-6"></label>
                <div class="col-md-10">
                    <input asp-for="PhoneNumber" class="form-control" placeholder="(XXX) XXX-XXXX" oninput="this.value = this.value.replace(/[^0-9]/g, '').replace(/(\d{3})(\d{3})(\d{4})/, '($1) $2-$3')" maxlength="14" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
 
            <br />
            <br />

            <div class="summary-btn col-md-12">
                <input type="submit" value="Save" class="btn btn-primary " />
                <a asp-action="Summary" class="btn btn-primary">Geri</a>
            </div>
        </div>
    </form>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

