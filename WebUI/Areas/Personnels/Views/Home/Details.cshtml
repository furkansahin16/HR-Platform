@using Business.Helper.ImageConverter
@model Core.Entites.Concrete.Employee


@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Personnels/Views/Shared/_PersonnelLayout.cshtml";
}
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>HR Platform</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/NiceAdmin/assets/img/favicon.png" rel="icon">
    <link href="~/NiceAdmin/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/NiceAdmin/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/NiceAdmin/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/NiceAdmin/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/NiceAdmin/assets/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/NiceAdmin/assets/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/NiceAdmin/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/NiceAdmin/assets/vendor/simple-datatables/style.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/NiceAdmin/assets/css/style.css" rel="stylesheet">

    <!-- =======================================================
    * Template Name: NiceAdmin - v2.5.0
    * Template URL: https://bootstrapmade.com/nice-admin-bootstrap-admin-html-template/
    * Author: BootstrapMade.com
    * License: https://bootstrapmade.com/license/
    ======================================================== -->
</head>

<div class="details-content">

    <div class="header-content">
        <h4 class="header-text">Yönetici Bilgileri</h4>
        <hr />
    </div>

    <dl class="row details-row">
        <dt class="col-sm-6 photo-dt">
            @Html.DisplayNameFor(model => model.Photo)
        </dt>
        <dd class="col-sm-6">
            <img src=@Url.Content($"~/images/{Model.Photo}") alt="portrait" width="100px" height="100px" />
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        @if (Model.SecondName is not null)
        {
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.SecondName)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.SecondName)
            </dd>
        }
        @if (Model.SecondLastName is not null)
        {
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.SecondLastName)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.SecondLastName)
            </dd>
        }
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.PlaceOfBirth)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.PlaceOfBirth)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.TCNo)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.TCNo)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.StartDateOfWork)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.StartDateOfWork)
        </dd>
        @if (Model.DismissalDate > Model.StartDateOfWork)
        {
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.DismissalDate)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.DismissalDate)
            </dd>
        }
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-6">
            <label>@(Model.IsActive ? "Çalışıyor" : "Ayrılmış")</label>
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.Job)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Job)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Department)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-6">
            Telefon Numarası
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.CompanyInfo)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.CompanyInfo)
        </dd>
    </dl>
    <div class="details-btn">
        @Html.ActionLink("Güncelle", "Update", new{}, new { @class = "btn btn-primary"})
        @Html.ActionLink("Geri", "Summary", new{}, new { @class = "btn btn-primary"})
    </div>
</div>


