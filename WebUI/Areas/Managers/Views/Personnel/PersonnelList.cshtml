@model IEnumerable<Business.ViewModels.Common.EmployeeListItem>

@{
    ViewData["Title"] = "Personel Listesi";
}
@*<p>

    <a asp-area="Managers" asp-controller="Personnel" asp-action="PersonnelCreate">Yeni Personel Ekle</a>
</p>*@

<div class="manager-summary">
    <br />
    <div class="personel-list-header">
        <h1 class="header-text">Personel Listesi</h1>
        <hr />
    </div>
    <p class="text-success">@TempData["Message"]</p>
    <div class="personal-list-content ">
        <table class="table list-table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Photo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Department)
                    </th>
                    <th>Personel İşlemleri</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="photo-container">
                                <img src=@Url.Content($"~/images/{item.Photo}") alt="portrait" width="100px" height="100px" />
                            </div>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Department)
                        </td>
                        <td>
                            @Html.ActionLink("Detay Bilgiler", "PersonnelDetails", new {  email=item.Email },new { @class = "btn btn-primary"})

                            @Html.ActionLink("Bilgileri Güncelle", "PersonnelUpdate", new { email=item.Email  },new { @class = "btn btn-primary"})
                            @*@Html.ActionLink("Personel Sil", "Delete", new {  id=item.ID })*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="register-btn">
        @Html.ActionLink("Yeni Personel Ekle", "PersonnelCreate","Personnel",new{}, new { @class = "btn btn-primary"})
    </div>
    <br />
</div>

