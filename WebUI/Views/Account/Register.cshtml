    <script src="~/jquery/password-hide1.js"></script>
    <script src="~/jquery/alertify.min.js"></script>
    <script>

        $(document).ready(function () {
            $('.telefon').mask('(000) 000-00-00');
            $('.telefon_maskeli').mask('(000) 000-00-00', { placeholder: "(___) ___-__-__" });
        });

    </script>
