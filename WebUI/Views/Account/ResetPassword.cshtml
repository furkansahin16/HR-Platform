<div class="password-reset-content">

    <div class="d-flex justify-content-center py-4 password-reset-header">
        <br />
        <br />
        <a href="index.html" class="logo d-flex align-items-center w-auto">
            <img src="~/NiceAdmin/assets/img/logo.png" alt="">
            <span class="d-none d-lg-block">HR Platform</span>
            <hr />
        </a>
        <br />
        <br />
    </div>

    <form asp-controller="Account" asp-action="ResetPassword" method="post" role="form" class="password-reset-form">
        <div asp-validation-summary="All" class="text-danger" />
        <input asp-for="Code" hidden />
        <div class="form-group">
            <label asp-for="Email" class="text-muted"></label>
            <div class="col-md-12">
                <input asp-for="Email" class="form-control col-sm-11" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group">
            <label asp-for="Password" class="col-md-6 text-secondary"></label>
            <div class="input-icons">
                <input id="txtPassword" type="password" class="form-control col-sm-10 input-field" asp-for="Password" placeholder="Şifre">
                <span id="toggle_pwd" class="fa-fw fa fa-eye field-icon"></span>
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="col-md-6 text-secondary"></label>
            <div class="input-icons">
                <input id="txtPassword1" type="password" class="form-control col-sm-10 input-field" asp-for="ConfirmPassword" placeholder="Şifre Tekrar">
                <span id="toggle_pwd1" class="fa-fw fa fa-eye field-icon"></span>
            </div>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>        
        <br>
        <br />
        <div class="form-group password-reset-btn">
            <div class="col-md-10">
                <button type="submit" class="btn btn-primary form-control col-sm-4  ">Şifre Yenile</button>
            </div>
        </div>
    </form>

</div>


