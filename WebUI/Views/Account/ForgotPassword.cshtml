<form asp-controller="Account" asp-action="ForgotPassword" method="post" role="form" class="forgot-pass-form">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="header-content">
        <h4 class="header-text">Şifrenizi mi unuttunuz?</h4>
        <hr />        
    </div>
    <div class="d-flex justify-content-center py-4">
