            <img src="~/NiceAdmin/assets/img/logo.png" alt="">
            <span class="d-none d-lg-block">HR Platform</span>
        </a>
    </div>
    <div class="form-group forgot-password-content">
        <label asp-for="Email" class="col-md-3"></label>
        <div class="col-md-3">
            <input asp-for="Email" class="form-control col-md-3" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>    
    <div class="form-group forgot-password-content">
        <div class="col-md-1 " style="width:120px">
