<form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form">
    <fieldset class="login-fieldset">
        <br />

        <legend>
            <div class="d-flex justify-content-center py-4 login-header">
                <a href="" class="logo d-flex align-items-center w-auto">
                    <img src="~/NiceAdmin/assets/img/logo.png" alt="">
                    <span class="d-none d-lg-block">HR Platform</span>
                </a>
            </div>
        </legend>
        @if (ViewBag.Message is not null)
        {
            <div class="text-danger">@ViewBag.Message</div>
        }
        <div class="col-sm-10">
            <label asp-for="Email" class="form-label mt-4">Email Adresi</label>
            <input type="email" class="form-control" asp-for="Email" aria-describedby="emailHelp" placeholder="Email Adresi">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="col-sm-10">
            <label asp-for="Password" class="form-label mt-4 text-secondary">Şifre</label>
            <div class="input-icons">
                <input id="txtPassword" type="password" class="form-control col-sm-10 input-field" asp-for="Password" placeholder="Şifre">
                <span id="toggle_pwd" class="fa-fw fa fa-eye field-icon"></span>
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class=" col-md-10">
                <div class="custom-checkbox">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>
        </div>
        <br />
        <div class="login-button">
            <button type="submit" class="btn btn-primary form-control col-sm-4" text-color="white">Giriş Yap</button>
        </div>

        <br />
        <div class="login-link ">
            @*<a asp-action="Register"> Yeni kullanıcı kaydı</a>*@
            <a asp-action="ForgotPassword"> Şifremi unuttum</a>
        </div>
        @*<p>

        </p>
        <p>

        </p>*@
    </fieldset>
</form>
